{
  "name": "echo-stack-starter",
  "version": "1.0.0",
  "description": "üõ©Ô∏è Full-stack starter kit for the single-seat developer",
  "keywords": [
    "effect",
    "tanstack",
    "fullstack",
    "typescript",
    "single-developer",
    "echo-stack"
  ],
  "author": "Echo Squadron",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/your-project-name.git"
  },
  "private": false,
  "type": "module",
  "scripts": {
    "preflight": "bun run config:validate && bun run db:health",
    "takeoff": "bun run dev",
    "mission": "bun run build && bun run start",
    "landing": "bun run db:reset",
    "dev": "pkill -f 'vite dev' || true && vite dev --port 3000",
    "dev:clean": "pkill -f 'vite dev' || true && sleep 1 && vite dev --port 3000",
    "start": "node .output/server/index.mjs",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "ts:check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:health": "bun run test/integration/database.test.ts",
    "db:test": "bun run test/integration/database.test.ts",
    "db:test:new": "bun run test/integration/database-new.test.ts",
    "db:setup": "bun run src/scripts/db-setup.ts",
    "db:reset": "bun run src/scripts/db-reset.ts",
    "db:seed": "bun run src/scripts/db-seed.ts",
    "db:help": "bun run src/scripts/db-help.ts",
    "config:validate": "bun run src/scripts/validate-config-consistency.ts",
    "extract:pem": "bun run src/scripts/extract-pem-key.ts",
    "test:integration": "bun run test/integration/database.test.ts && bun run test/integration/logger.test.ts",
    "test:config": "bun run test/integration/config.test.ts",
    "test:auth": "bun run test/integration/auth.test.ts",
    "test:email": "bun run test/integration/email.test.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-router": "^1.131.27",
    "@tanstack/react-router-ssr-query": "^1.131.27",
    "@tanstack/react-start": "^1.131.27",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "effect": "^3.17.8",
    "nodemailer": "^7.0.5",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.6",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/eslint-plugin-router": "^1.131.2",
    "@tanstack/react-devtools": "^0.4.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@tanstack/react-router-devtools": "^1.131.27",
    "@tanstack/router-plugin": "^1.131.27",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "^1.2.20",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^5.0.1",
    "drizzle-kit": "^0.31.4",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "unrs-resolver"
  ]
}
